{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "lib": ["ES6", "DOM"],
    "paths": {
      "@/*": ["./app/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./app/**.ts"]
}
